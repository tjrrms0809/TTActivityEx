<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="#88EEEEEE"
    tools:context=".EditActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText android:id="@+id/ed_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:padding="8dp"
            android:hint="이름"
            android:inputType="text"
            android:background="@drawable/bg_round"/>

        <EditText android:id="@+id/ed_nick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:padding="8dp"
            android:hint="닉네임"
            android:inputType="text"
            android:background="@drawable/bg_round"/>

        <EditText android:id="@+id/ed_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:padding="8dp"
            android:hint="제목"
            android:inputType="text"
            android:background="@drawable/bg_round"/>

        <TextView android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="글자수 : 0/500"
            android:layout_gravity="right"
            android:layout_marginRight="4dp"/>

        <EditText android:id="@+id/ed_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:padding="16dp"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:maxLength="500"
            android:background="@drawable/bg_round"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="취소"
                android:background="@drawable/bg_button_round"
                android:layout_margin="4dp"
                android:onClick="clickCancel"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="완료"
                android:layout_margin="4dp"
                android:background="@drawable/bg_button_round"
                android:onClick="clickComplete"/>

        </LinearLayout>

    </LinearLayout>



</RelativeLayout>